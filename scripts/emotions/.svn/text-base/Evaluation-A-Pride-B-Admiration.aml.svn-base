<?xml version="1.0" encoding="ISO-8859-1"?>
<aml:AffectScript xmlns:aml="xml.affect.de">
  <aml:Context>Bruno ist Annes Vater. Anne unterstützt ihre Oma bei schwierigen Arbeiten.
	Bruno und Anne sind Nachbarn und verstehen sich prima</aml:Context>
  <aml:Item time="0">
    <aml:ResetCharacter name="Anne"/>
  </aml:Item>
  <aml:Item time="0">
    <aml:ResetCharacter name="Bruno"/>
  </aml:Item>
  <aml:Item time="1000">
    <aml:AffectInput>
      <aml:Character name="Bruno"/>
      <aml:Act addressee="Anne" listener="" type="PraiseAction" intensity="0.70" elicitor="Grandmother Help"/>
    </aml:AffectInput>
    <aml:Context>Bruno: Mensch Anne, ich find's echt gut, dass du deiner Oma bei der Gartenarbeit hilfst. [signal]</aml:Context>
  </aml:Item>
</aml:AffectScript>